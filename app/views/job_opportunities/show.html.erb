<h3 class="link-to-back"><%= link_to 'Voltar', job_opportunities_path %></h3>

<div class="div-job">
	<%= render "info_job" %>

	<% if headhunter_signed_in? %>
		<p class="link-list-interview"><%= link_to 'Minhas Entrevistas', job_opportunity_interview_path(@job) %></p>

		<%= render "feedback_candidates" %>
		<%= render "candidates" %>

	<% else %>
		<% if @apply_jobs.any? %>
			<p class="msg-sucess">VocÃª se candidatou para esta vaga</p>
			<p class="ver-candidatura">
				<%= link_to 'Ver minha candidatura', job_opportunity_apply_job_path(@job) %></p> 
		<% else %>	
			<p><%= link_to 'Quero me candidatar', new_job_opportunity_apply_job_path(@job) %></p>
		<% end %>
	<% end %>

	<% if headhunter_signed_in? %>
		<div class="button-edit-delete">
			<p class="edit" ><%= link_to 'Editar', edit_job_opportunity_path(@job), id: "edit-#{@job.id}"%></p>
			<p class="delete"><%= link_to 'Encerrar Vaga', job_opportunity_path(@job),
				 method: :delete, id: "delete-#{@job.id}"%>
			</p>
		</div>
	<% end %>
</div>
