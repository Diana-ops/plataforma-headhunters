<div class="customers-div">
	<h1>Vagas Cadastradas</h1>
	
	<% if headhunter_signed_in? %>
		<h3><%= link_to 'Cadastrar nova Vaga', new_job_opportunity_path %></h3>
	<% end %>	

	<% if @jobs.empty? %>
		<%= 'Nenhuma vaga cadastrada' %>
	<% end %>

	<div>
		<% @jobs.each do |job| %>
			<% if headhunter_signed_in? %>
				<% if job.headhunter.email === current_headhunter.email %>
					<div class="each-manufacturer">
						<p><%= job.title %></p>
						<p><%= job.company %></p>
						<p><%= job.region %></p>
						<p><%= number_to_currency job.salary_range %></p>
						<p><%= job.level.name %></p>
						<p><%= link_to 'Detalhes da Vaga', job , id: "details-#{job.id}"%></p>
					</div>
				<% end %>
			<% end %>
			<% if user_signed_in? %>
				<div class="each-manufacturer">
					<p><%= job.title %></p>
					<p><%= job.company %></p>
					<p><%= job.region %></p>
					<p><%= number_to_currency job.salary_range %></p>
					<p><%= job.level.name %></p>
					<p><%= link_to 'Detalhes da Vaga', job , id: "details-#{job.id}"%></p>
				</div>
			<% end %>
		<% end %>
	</div>
</div>
