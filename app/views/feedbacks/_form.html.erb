<div class="form">
	<%= form_with model: [@job_opportunuty, @apply_job, @feedback], local: true do |f| %>
		<div class="field-submit">
			<p><%= f.label :message %></p>
			<%= f.text_area(:message, cols: 40, rows: 5, class: 'app_input') %>
		</div>
		
		<div class="selectors">
			<div class="field-submit">
				<%= f.label :choice_id %>
				<%= f.collection_select :choice_id, @choices, :id, :option %>
			</div>
		</div>

		<button class="submit-form" type="submit">Enviar Feedback</button>
	<% end %>
</div>
