	<p><%= @candidate.profile_description %></p>
</div>
<div>
	<h4><%= Candidate.human_attribute_name(:experience) %></h4>
	<p><%= @candidate.experience %></p>
</div>
<div>
	<h4><%= Candidate.human_attribute_name(:formation) %></h4>
	<p><%= @candidate.formation %></p>
</div>
<div>
	<h4><%= Candidate.human_attribute_name(:courses) %></h4>
	<p><%= @candidate.courses %></p>
</div>
