<h3 class="link-to-back"><%= link_to 'Voltar', job_opportunity_path(@job_opportunity) %></h3>

<div class="interviews-div">
	<h1>Entrevistas para esta vaga</h1>

	<% if @interviews.empty? %>
		<p class="msg-error"><%= 'Nenhuma entrevista marcada' %></p>
	<% end %>

	<div class="all-cards-interview">
		<% @interviews.each do |interview| %>
			<div class="each-card">
				<p>Vaga:&nbsp;<%= link_to @job_opportunity.title, @job_opportunity %></p>
				<p>Data:&nbsp;<%= l interview.interview_date, format: :short %></p>
				<p>Horário:&nbsp;<%= l interview.hour, format: :short %></p>
				<p>Endereço:&nbsp;<%= interview.address %></p>
				<p>Candidato: 
					<%= link_to interview.candidate.full_name, interview.candidate %> - 
					<%= interview.candidate.profession %>
				</p>
				<p class="edit" ><%= link_to 'Editar',  
					edit_job_opportunity_candidate_interview_path(@job_opportunity, 
						interview.candidate, interview), 
						id: "edit-interview-#{interview.id}"%>
				</p>
			</div>
		<% end %>
	</div>
</div>
